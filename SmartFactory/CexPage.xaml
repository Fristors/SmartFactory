<Page x:Class="SmartFactory.CexPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartFactory"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1400"
      Title="CexPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="←" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="30" Width="70" Height="50" Background="Transparent" BorderBrush="Transparent" Click="Button_Click"/>
        <Image x:Name="Fon" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Canvas x:Name="Main">
        </Canvas>
        <Grid Grid.Column="1" x:Name="MenuGrid">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock x:Name="StanName" Text="Станок - "/>
                <TextBlock x:Name="StatusName" Text="Статус - "/>
                <TextBlock x:Name="CheckName" Text="Последняя проверка - "/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
